<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.home.DeviceControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="@dimen/margin_100"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true">

            <View
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_ble_small_cilcle_bg"/>

            <com.jetpack.demo.widget.OverviewScoreView
                android:id="@+id/view_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_40"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:src="@drawable/ic_ble_status_completed"/>

                    <TextView
                        android:id="@+id/tvLogin"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adjusting: 39"
                        android:textColor="@color/text_color_3"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <ImageView
            android:layout_width="310dp"
            android:layout_height="255dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_ble_car"
            android:visibility="visible"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvUpdate"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:text="更新"
        android:textColor="@color/text_color_3"
        />


</LinearLayout>